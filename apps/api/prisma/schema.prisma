generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  HEAD_CHEF
  SOUS_CHEF
}

enum DeliveryDay {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
}

enum OrderStatus {
  DRAFT
  CONFIRMED
  SENT
  RECEIVED
  CANCELLED
}

enum RecipeType {
  PREPARACION
  PRODUCCION
  SEMIELABORADO
  BASE
  SALSA
  POSTRE
}

enum UnitOfMeasure {
  KG
  LT
  UN
  GR
  ML
  PORCIONES
  BANDEJAS
  BOLSAS
  CAJAS
  BIDONES
  LATAS
  PAQUETES
  BOTELLAS
  SOBRES
  ROLLOS
  FRASCOS
  POTES
  TARROS
  MALLAS
  SACOS
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations Location[]
  users     User[]

  @@map("organizations")
}

model Location {
  id             String       @id @default(cuid())
  name           String
  address        String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  isActive       Boolean      @default(true)
  brands         String[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  stations Station[]
  users    User[]
  orders   OrderRequest[]

  @@map("locations")
}

model Station {
  id         String   @id @default(cuid())
  name       String
  locationId String
  location   Location @relation(fields: [locationId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  assignedUsers      UserStation[]
  inventoryCounts    InventoryCount[]
  productionLogs     ProductionLog[]
  stationProducts    StationProduct[]
  weeklyConsumptions WeeklyConsumption[]

  @@map("stations")
}

model UserStation {
  userId    String
  stationId String
  user      User    @relation(fields: [userId], references: [id])
  station   Station @relation(fields: [stationId], references: [id])

  @@id([userId, stationId])
  @@map("user_stations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  password       String
  name           String
  role           Role         @default(SOUS_CHEF)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  locationId     String?
  location       Location?    @relation(fields: [locationId], references: [id])
  isActive       Boolean      @default(true)
  refreshToken   String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  stations        UserStation[]
  inventoryCounts InventoryCount[]
  productionLogs  ProductionLog[]
  generatedOrders OrderRequest[]

  @@map("users")
}

model ProductCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("product_categories")
}

model Product {
  id               String        @id @default(cuid())
  code             String        @unique
  name             String
  categoryId       String
  category         ProductCategory @relation(fields: [categoryId], references: [id])
  unitOfMeasure    UnitOfMeasure @default(UN)
  unitOfOrder      UnitOfMeasure @default(UN)
  conversionFactor Decimal       @default(1) @db.Decimal(10, 4)
  minStock         Decimal?      @db.Decimal(10, 2)
  maxStock         Decimal?      @db.Decimal(10, 2)
  wastagePercent   Decimal       @default(0) @db.Decimal(5, 2)
  isActive         Boolean       @default(true)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  unitCost          Decimal?           @db.Decimal(12, 2)
  supplier          String?
  deliveryDay       DeliveryDay?
  inventoryCounts   InventoryCount[]
  productionLogs    ProductionLog[]
  stationProducts   StationProduct[]
  recipeIngredients RecipeIngredient[]
  recipesAsOutput   Recipe[]           @relation("RecipeOutput")
  priceHistory      ProductPriceHistory[]
  weeklyConsumptions WeeklyConsumption[]
  orderItems        OrderItem[]

  @@map("products")
}

model StationProduct {
  stationId String
  productId String
  station   Station @relation(fields: [stationId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  sortOrder Int     @default(0)

  @@id([stationId, productId])
  @@map("station_products")
}

model InventoryCount {
  id        String   @id @default(cuid())
  stationId String
  station   Station  @relation(fields: [stationId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Decimal  @db.Decimal(10, 2)
  date      DateTime @db.Date
  notes     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([stationId, productId, date])
  @@index([stationId, date])
  @@index([date])
  @@map("inventory_counts")
}

model ProductionLog {
  id               String   @id @default(cuid())
  stationId        String
  station          Station  @relation(fields: [stationId], references: [id])
  productId        String
  product          Product  @relation(fields: [productId], references: [id])
  quantityProduced Decimal  @db.Decimal(10, 2)
  date             DateTime @db.Date
  notes            String?
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  createdAt        DateTime @default(now())

  @@unique([stationId, productId, date])
  @@index([stationId, date])
  @@index([date])
  @@map("production_logs")
}

model Recipe {
  id              String     @id @default(cuid())
  name            String
  type            RecipeType @default(PREPARACION)
  outputProductId String
  outputProduct   Product    @relation("RecipeOutput", fields: [outputProductId], references: [id])
  outputQuantity  Decimal    @db.Decimal(10, 2)
  instructions    String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  ingredients   RecipeIngredient[]
  costSnapshots RecipeCostSnapshot[]

  @@map("recipes")
}

model RecipeIngredient {
  id        String  @id @default(cuid())
  recipeId  String
  recipe    Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Decimal @db.Decimal(10, 4)

  @@unique([recipeId, productId])
  @@map("recipe_ingredients")
}

model RecipeCostSnapshot {
  id              String   @id @default(cuid())
  recipeId        String
  recipe          Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  totalCost       Decimal  @db.Decimal(12, 2)
  costPerUnit     Decimal  @db.Decimal(12, 2)
  ingredientCount Int
  snapshot        Json
  calculatedAt    DateTime @default(now())

  @@index([recipeId, calculatedAt])
  @@map("recipe_cost_snapshots")
}

model ProductPriceHistory {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  unitCost      Decimal  @db.Decimal(12, 2)
  effectiveFrom DateTime @default(now())
  notes         String?
  createdAt     DateTime @default(now())

  @@index([productId, effectiveFrom])
  @@map("product_price_history")
}

model WeeklyConsumption {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  stationId   String
  station     Station  @relation(fields: [stationId], references: [id])
  weekStart   DateTime @db.Date
  weekEnd     DateTime @db.Date
  consumption Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())

  @@unique([productId, stationId, weekStart])
  @@index([stationId, weekStart])
  @@map("weekly_consumptions")
}

model OrderRequest {
  id            String      @id @default(cuid())
  locationId    String
  location      Location    @relation(fields: [locationId], references: [id])
  requestDate   DateTime    @db.Date
  deliveryDay   DeliveryDay
  status        OrderStatus @default(DRAFT)
  generatedById String
  generatedBy   User        @relation(fields: [generatedById], references: [id])
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  items OrderItem[]

  @@index([locationId, requestDate])
  @@map("order_requests")
}

model OrderItem {
  id                    String        @id @default(cuid())
  orderId               String
  order                 OrderRequest  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId             String
  product               Product       @relation(fields: [productId], references: [id])
  currentStock          Decimal       @db.Decimal(10, 2)
  weeklyAvgConsumption  Decimal       @db.Decimal(10, 2)
  suggestedQty          Decimal       @db.Decimal(10, 2)
  confirmedQty          Decimal?      @db.Decimal(10, 2)
  unitOfOrder           UnitOfMeasure @default(UN)
  conversionFactor      Decimal       @db.Decimal(10, 4)
  unitCost              Decimal?      @db.Decimal(12, 2)

  @@index([orderId])
  @@map("order_items")
}
